{
  "scripts": {
    "prestart": "rm -f coverage.xml && dotnet tool restore",
    "build": "dotnet build",
    "start": "dotnet tool run dotnet-coverage collect -o coverage.xml -f cobertura dotnet run --no-build",
    "test": "newman run api-tests.postman_collection.json --delay-request 500",
    "stop": "kill-port 5000",
    "start-and-test": "./start-and-test.sh",
    "coverage-report": "dotnet reportgenerator -reports:coverage.xml -targetdir:coveragereport -sourcedirs:src -classfilters:'-Serilog.*'",
    "check-coverage": "node ./check-coverage.js"
  },
  "devDependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "kill-port-process": "^3.1.0",
    "newman": "^5.3.2",
    "wait-on": "^7.0.1",
    "xpath": "^0.0.33"
  }
}
